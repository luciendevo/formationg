# Headers for Formation G CRM - Fix MIME type issues

# JavaScript modules - Multiple patterns to catch all cases
/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: max-age=31536000

/*.mjs
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: max-age=31536000

/assets/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: max-age=31536000

/assets/*.mjs
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: max-age=31536000

# Vite specific patterns
/src/*.tsx
  Content-Type: application/javascript; charset=utf-8

/src/*.ts
  Content-Type: application/javascript; charset=utf-8

/src/*.jsx
  Content-Type: application/javascript; charset=utf-8

# CSS files
/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: max-age=31536000

# Assets folder
/assets/*
  Cache-Control: max-age=31536000

# Images
/*.webp
  Cache-Control: public, max-age=604800

/*.png
  Cache-Control: public, max-age=604800

/*.jpg
  Cache-Control: public, max-age=604800

/*.svg
  Content-Type: image/svg+xml; charset=utf-8
  Cache-Control: public, max-age=604800

# Fonts
/*.woff2
  Content-Type: font/woff2
  Cache-Control: public, max-age=31536000

/*.woff
  Content-Type: font/woff
  Cache-Control: public, max-age=31536000

# JSON files
/*.json
  Content-Type: application/json; charset=utf-8

# Main HTML
/
  X-Frame-Options: DENY
  X-XSS-Protection: 1; mode=block
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https: *.supabase.co;
